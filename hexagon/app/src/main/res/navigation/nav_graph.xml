<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.hexagon.ui.fragments.ListFragment"
        android:label="List Fragment"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_listFragment_to_addPersonFragment"
            app:destination="@id/addPersonFragment" />
    </fragment>

    <fragment
        android:id="@+id/addPersonFragment"
        android:name="com.example.hexagon.ui.fragments.AddPersonFragment"
        android:label="Add Person Fragment"
        tools:layout="@layout/fragment_add_person">
        <action
            android:id="@+id/action_addPersonFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>

</navigation>
